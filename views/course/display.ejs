<%- include("../header.ejs") %>

    <h1 class="mt-5 text-center " style="padding-top: 40px;">Course Display</h1>
    <div class="container mt-5">
        <table class="table table-bordered text-center">
            <thead>
                <tr class="bg-info">
                    <th colspan="7">Display Course</th>
                    <% if(msg.length> 0){ %>
                        <div class="alert alert-info">
                            <%= msg %>
                        </div>
                        <%}%>
                </tr>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Course</th>
                    <th>Status</th>
                    <th>Comments</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% c.forEach((item)=>{%>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.email %>
                        </td>
                        <td>
                            <%= item.course %>
                        </td>
                        <td>
                            <%= item.status %>
                        </td>
                        <td>
                            <%= item.Comment %>
                        </td>
                        <td>
                            <a href="/ViewCourse/<%=item.id%>" class="btn btn-info">View</a>
                            <a href="/EditCourse/<%=item.id%>" class="btn btn-success">Edit</a>
                            <!-- <a href="/DeleteCourse/<%=item.id%>" class="btn btn-danger">Delete</a> -->
                        </td>
                    </tr>
                    <%})%>
            </tbody>
        </table>
    </div>
    <!-- container end -->

    <%- include("../footer.ejs") %>