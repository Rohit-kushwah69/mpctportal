<%- include('./header.ejs') %>
    <%- include('./sidebar.ejs') %>

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Course</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                                <li class="breadcrumb-item active">Course Display</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <h1 class="text-center" style="padding-top: 40px;">Course Edit</h1>
            <div class="container mt-5" style="max-width:550px">
                <form action="/Updateadmin/<%= c._id%>" method="post">
                    <div class="mb-3">
                        <label for="">Name</label>
                        <input type="text" value="<%= c.name %>" name="name" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="">Email</label>
                        <input type="text" value="<%= c.email %>" name="email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="">Phone no.</label>
                        <input type="number" value="<%= c.phone %>" name="phone" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="">DOB</label>
                        <input type="date" value="<%= c.dob %>" name="dob" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="">Address</label>
                        <textarea name="address" class="form-control"><%= c.address%></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="">Gender</label>
                        <input type="radio" name="gender" value="male" <%=c.gender=='male' ?'checked':''%>>Male
                        <input type="radio" name="gender" value="female" <%=c.gender=='female' ?'checked':''%>>Female
                    </div>
                    <div class="mb-3">
                        <label for="">Education</label>
                        <select name="education" class="form-control form-select">
                            <option value="">select education</option>
                            <option value="10" <%=c.education=='10' ?'selected':''%>>10th</option>
                            <option value="12" <%=c.education=='12' ?'selected':''%>>12th</option>

                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="">Course</label>
                        <input type="text" value="<%= c.course %>" readonly class="form-control" name="course">
                    </div>
                    <button type="submit" class="btn btn-success">Update</button>
                    <br><br>
                </form>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <%- include("./footer.ejs") %>